{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "composite": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "~/*": [ "./*" ],
            "@/*": [ "./src/*" ]
        }
    },
    "exclude": [
        "dist",
        "**/node_modules/**",
        "**/*.test.*",
        "**/__mocks__"
    ],
    "include": [
        "./src/**/*.ts",
        "./src/**/*.json"
    ]
}
