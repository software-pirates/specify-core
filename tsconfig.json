{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "isolatedModules": true,
        "module": "Preserve",
        "moduleDetection": "force",
        "outDir": "./dist",
        "paths": {
            "@config/*": [ "./config/*" ]
        },
        "resolveJsonModule": true,
        "target": "es2024"
    },
    "exclude": [ "**/node_modules/**", ],
    "include": [
        "**/*.ts",
        "**/*.json",
    ]
}
