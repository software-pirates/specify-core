    "eslint-plugin-jsonc": "^2.20.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "globals": "^16.1.0",
    "globby": "^14.1.0",
    "jest": "^29",
    "jiti": "^2.4.2",
    "jsonc-eslint-parser": "^2.4.0",
    "lodash": "^4.17.21",
    "pnpm": "^10.11.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
  }
